<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:background="#DDDDDD"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/despesa_item_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="09/11/2019"
        android:textStyle="bold"
        android:background="#AAAAAA"
        android:textAlignment="center"
        />

    <ImageView
        android:id="@+id/despesa_item_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/despesa_item_date"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_transport"/>

    <View
        android:id="@+id/despesa_item_line"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="#616161"
        app:layout_constraintTop_toBottomOf="@id/despesa_item_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="24dp"
        />

    <TextView
        android:id="@+id/despesa_descrition_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/despesa_item_icon"
        app:layout_constraintLeft_toRightOf="@id/despesa_item_icon"
        app:layout_constraintRight_toLeftOf="@id/despesa_item_time"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#616161"
        android:text="Uber para metro" />

    <TextView
        android:id="@+id/despesa_item_time"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/despesa_descrition_txt"
        android:text="12:30:12"
        android:textSize="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:textAlignment="textEnd"
        android:textColor="#616161"
        />

    <TextView
        android:id="@+id/despesa_item_category_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/despesa_descrition_txt"
        app:layout_constraintLeft_toRightOf="@id/despesa_item_icon"
        app:layout_constraintRight_toLeftOf="@id/despesa_item_value"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="16dp"
        android:textColor="#616161"
        android:textSize="14dp"
        android:text="Transporte" />

    <TextView
        android:id="@+id/despesa_item_value"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/despesa_descrition_txt"
        android:text="R$ 1.687,90"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:textAlignment="textEnd"
        android:textColor="#FF6161"
        />

</androidx.constraintlayout.widget.ConstraintLayout>


